<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-warning">
    <div class="container-fluid">

    <nav class="nav navbar-nav navbar-left">
      <% if admin_signed_in? %>
        <%= link_to  admin_root_path do %>
          <%= image_tag 'logo3.png',size: "200x100" %>
        <% end %>
      <% else %>
        <%= link_to  root_path do %>
          <%= image_tag 'logo3.png',size: "200x100" %>
        <% end %>
      <% end %>
    </nav>
    <% if customer_signed_in? %>
    <div class="header-name text-right offset-md-4">
      <% if customer_signed_in? %>
        ようこそ、<%= current_customer.last_name %>さん！
      <% end %>
    </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-right">
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
          <% if customer_signed_in? %>
            <button class="btn btn-sm btn-warning mr-2" type="button">
               <%= link_to customers_path, class: "nav-link", method: :get do %>
              マイページ<i class="fas fa-user"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to items_path, class: "nav-link", method: :get do %>
              商品一覧<i class="fas fa-gift"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%=  link_to cart_items_path ,class: "nav-link", method: :get do %>
              カート<i class="fas fa-cart-arrow-down"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link" do %>
              ログアウト<i class="fas fa-sign-out"></i>
              <% end %>
            </button>
          <% elsif admin_signed_in? %>
          <!-- 管理者がログインしている時 -->
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to admin_items_path, class: "nav-link", method: :get do %>
              商品一覧<i class="fas fa-gift"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to admin_customers_path, class: "nav-link", method: :get do %>
              会員一覧<i class="fas fa-users"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to admin_root_path, class: "nav-link", method: :get do %>
              注文履歴一覧<i class="fas fa-cart-arrow-down"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to admin_genres_path, class: "nav-link", method: :get do %>
              ジャンル一覧<i class="fa-solid fa-folder-tree"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to destroy_admin_session_path, class: "nav-link", method: :delete do  %>
              ログアウト<i class="fas fa-sign-out"></i>
              <% end %>
            </button>
          <% else %>
          <!-- ログインしていない時 -->
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to about_path, class: "nav-link", method: :get do %>
              About<i class="fas fa-store"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to items_path, class: "nav-link", method: :get do %>
              商品一覧<i class="fas fa-gift"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to new_customer_registration_path, class: "nav-link", method: :get do %>
              新規登録<i class="fas fa-user-plus"></i>
              <% end %>
            </button>
            <button class="btn btn-sm btn-warning mr-2" type="button">
              <%= link_to new_customer_session_path, class: "nav-link", method: :get do %>
              ログイン<i class="fas fa-sign-in"></i>
              <% end %>
            </button>
          <% end %>
        </ul>
      </div>
      <%= render 'layouts/search' %>
    </div>
    </div>
  </nav>
</header>