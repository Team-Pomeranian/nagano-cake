<div class="container pt-5">

  <div class="row">

    <div class="col-md-3">
      <table class="table border">
        <thead class="text-center">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>test</td>
          </tr>
        </tbody>

      </table>
    </div>

    <div class="col-md-8">
      <div class="row ml-3">
        <h3 class="font-weight-bold">商品一覧</h3>
        <p class="p-2">(全<%= @items.count %>件）<p>
      </div>


      <div>

        <% @items.each do |item| %>
        <div>
          <%= image_tag item.item_image %>
          <%= item.name %><br>
          ¥<%= item.price_no_tax %><br>
        </div>
        <% end %>

      </div>


      <div class="text-center">
        <%= paginate @items %>
      </div>

    </div>


  </div>

</div>