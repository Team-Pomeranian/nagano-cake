<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <h2 class="form-title">会員情報編集</h2>

      <%= form_with model:@customer, url:customers_path, local: true do |f| %>

        <div class="col-lg-10">
          <div class="form-group col-sm-12">
            <%= f.label :"氏名", class: "col-sm-3" %>
            <%= f.text_field :last_name, class: "col-sm-3" %>
            <%= f.text_field :first_name, class: "col-sm-3" %>
          </div>
          <div class="form-group col-sm-12">
            <%= f.label :"フリガナ", class: "col-sm-3" %>
            <%= f.text_field :last_name_kana, class: "col-sm-3" %>
            <%= f.text_field :first_name_kana, class: "col-sm-3" %>
          </div>
          <div class="form-group col-sm-12">
            <%= f.label :"郵便番号", class: "col-sm-3" %>
            <%= f.text_field :post_code, class: "col-sm-3" %>
          </div>
          <div class="form-group col-sm-12">
            <%= f.label :"住所", class: "col-sm-3" %>
            <%= f.text_field :address, class: "col-sm-8" %>
          </div>
          <div class="form-group col-sm-12">
            <%= f.label :"電話番号", class: "col-sm-3" %>
            <%= f.text_field :telephone_number, class: "col-sm-3" %>
          </div>
          <div class="form-group col-sm-12">
            <%= f.label :"メールアドレス", class: "col-sm-3" %>
            <%= f.email_field :email, class: "col-sm-3" %>
          </div>

          <div class="col-sm-12 offset-md-3">
            <%= f.submit "編集内容を保存", class: "btn btn-primary" %>
            <!--退会画面表示のみ-->
            <%= link_to '退会する', unsubscribe_customers_path, class: "btn btn-danger ml-5"%>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>