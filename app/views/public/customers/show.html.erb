<div class="container mt-4">

  <div class="row offset-md-1 mt-4">
      <h3>マイページ</h3>
  </div>

  <div class="row mb-2 mt-3">
    <div class="col-2">
      <h3 class="font-weight-bold">登録情報</h3>
    </div>
      <div >
        <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
      </div>
  </div>


  <div class="row">
    <div class="col-8">
      <table class="table border">
        <tbody>

          <tr>
            <th>氏名</th>
            <td class="border"><%= current_customer.last_name %>  <%= current_customer.first_name %></td>
          </tr>

          <tr>
            <th>カナ</th>
            <td class="border"><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td class="border"><%= current_customer.post_code %></td>
          </tr>

          <tr>
            <th>住所</th>
            <td class="border"><%= current_customer.address %></td>
          </tr>

          <tr>
            <th>電話番号</th>
            <td class="border"><%= current_customer.telephone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td class="border"><%= current_customer.email %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-4">

    <div class="col-2">
      <h3 class="font-weight-bold pb-3">配送先</h3>
    </div>

    <div class="col">
      <%= link_to "一覧を見る", delivery_addresses_path, class: "btn btn-primary" %>
    </div>

  </div>

  <div class="row">

    <div class="col-2">
      <h3 class="font-weight-bold">注文履歴</h3>
    </div>

    <div class="col">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>

  </div>

</div>



