<div class="container pt-5">

  <div class="row">

    <div class="col-md-3">
      <table class="table border">
        <thead class="text-center">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <%= render "public/items/sidebar", genres: @genres %>
        </tbody>

      </table>
    </div>

    <div class="col-md-8">
      <div class="row ml-3">
        <h3 class="font-weight-bold"><%= @genre.name %>一覧</h3>
        <p class="p-2">(全<%= @genre.items.count %>件）<p>
      </div>


      <div class="row">

        <% @genre.items.each do |item| %>
        <div>
          <%= link_to item_path(item) do %>
          <%= image_tag item.item_image, size: '100x100' %>
          <% end %>
          <%= item.name %><br>
          ¥<%= item.price_no_tax %><br>
        </div>
        <% end %>

      </div>


      <div class="text-center">
      </div>

    </div>


  </div>

</div>