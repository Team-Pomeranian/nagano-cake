<div class="container mt-4">
  <div class="row">
    <h3 class="offset-1">ショッピングカート</h3>
    <%= link_to "カートを空にする", destroy_all_cart_items_path(@cart_items), method: :delete, class: "btn btn-danger offset-md-5" %>
  </div>

  <div class="row mt-3">
    <table class="table">
      <thead>
        <tr class="bg-light">
          <th class="col-3">商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to item_path(cart_item.item.id) do %>
              <%= image_tag item.get_image(200, 300) %>
              <% end %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model:cart_item, method: :post,local:true do |f| %>
                <%= f.hidden_field :item_id, value: cart_item.item.id %>
                <%= f.select :quantity, options_for_select(selected: cart_item.quantity.to_i) %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(item_id: cart_item.item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>


  <div class="mt-3 row">
    <div>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary center" %>
    </div>

    <div class="offset-md-8">
      <table class="border">
        <tr>
          <th class="bg-light p-4">合計金額</th>
          <td class="p-4"><%= @total.round.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

</div>