


<div class="container">

      <h4 class="mb-5 mt-5"> 新規会員登録 </h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


    <div class="row form-group">
      <%= f.label :名前, class: "col-3" %>
      <%= f.label :last_name, "(姓)", class: "col-form-label col-1" %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :first_name, "（名）", class: "col-form-label col-1" %>
      <%= f.text_field :first_name %>

    </div>

    <div class="row form-group">
      <%= f.label :フリガナ, class: "col-3" %>
      <%= f.label :last_name_kana, "(セイ)", class: "col-form-label col-1" %>
      <%= f.text_field :last_name_kana %>
      <%= f.label :first_name, "（メイ）", class: "col-form-label col-1" %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="row form-group">
      <%= f.label :メールアドレス, class: "col-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="row form-group">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-4" %>
      <%= f.text_field :post_code %>
    </div>

    <div class="row form-group">
      <%= f.label :住所, class: "col-4" %>
      <%= f.text_field :address, class: "col-5" %>
    </div>

    <div class="row form-group">
      <%= f.label :電話番号（ハイフンなし）, class: "col-4" %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="row form-group">
      <%= f.label :パスワード（６文字以上）, class: "col-4" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="row form-group">
      <%= f.label :パスワード（確認用）, class: "col-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

  <div class="row">
    <div class="col-4"></div>
    <%= f.submit "新規登録",class: "btn btn-success col-2" %>
  </div>
<% end %>

<div class="row">
  <div class="mt-5 col-3">
    <h5><span>既に登録済みの方</span></h5>
  </div>
</div>

  <div class="row mt-1">
    <div class="col-1"></div>
      <%= render "public/shared/links" %>
  </div>

</div>



