<div class="container">
  <div class="row">
  <h2>注文情報入力</h2>
  <div class="col-sm-12">
   <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
    <div>
      <h3><%= f.label :payment, "支払方法" %></h3>
      <%= f.radio_button :payment, "クレジットカード", checked: "checked" %>
      <%= f.label :payment, "クレジットカード" %>
      <br>
      <%= f.radio_button :payment, "銀行振込" %>
      <%= f.label :payment, "銀行振込" %>
    </div>
   
   <div>
     <h3><%= f.label :address, "お届け先" %></h3>
      <%= f.radio_button :address, 0, checked: "checked" %>
      <%= f.label :address, "ご自身の住所" %>
      <p>〒<%= @customer.post_code %><br>
         <%= @customer.address %><br>
         <%= @customer.last_name %><%= @customer.first_name %>
      </p>
   </div>
   
   <div>
      <%= f.radio_button :address, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <p>
        <%= f.collection_select :delivery_address, current_customer.delivery_addresses.all, :id, :name, prompt: "住所を選択してください" %>
      </p>
   </div>
   
   <div>
      <%= f.radio_button :address, 2 %>
      <%= f.label :address, "新しいお届け先" %>
        <div class="field col-lg-12">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-lg-3" %>
          <%= f.text_field :postcode %>
        </div>
        <div class="field col-lg-12">
          <%= f.label "住所", class: "col-lg-3" %>
          <%= f.text_field :address, size:"60x60"%>
        </div>
        <div class="field col-lg-12">
          <%= f.label "宛名", class: "col-lg-3" %>
          <%= f.text_field :name, size:"30x30" %>
        </div>
   </div>
   
      <div class="col-lg-12 d-flex justify-content-center">
        <%= f.submit "確認画面へ進む",class:"btn btn-primary col-lg-2" %>
      </div>
    <% end %>
  </div>
</div>
</div>