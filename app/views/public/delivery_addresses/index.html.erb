<div class="container mt-4">

  <div class="row offset-md-1">
      <h3>配送先登録/一覧</h3>
  </div>

  <% if @delivery_address.errors.any? %>

    <div class="row offset-md-1">

      <ul>
      <% @delivery_address.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>

    </div>

  <% end %>


      <%= form_with model: @delivery_address, local: true do |f| %>

      <div class="row mt-4 form-group">
        <%= f.label :postcode, "郵便番号（ハイフンなし）",class: "col-md-3" %>
        <%= f.text_field :postcode, class: "offset-md-1" %>
      </div>

      <div class="row form-group">
        <%= f.label :address, "住所",class: "col-md-3" %>
        <%= f.text_field :address, class: "offset-md-1 col-4" %>
      </div>

      <div class="row mb-5 form-group">
        <%= f.label :name, "名前",class: "col-md-3" %>
        <%= f.text_field :name, class: "offset-md-1" %>
        <%= f.submit "新規登録",class: "btn btn-success offset-md-2 col-2" %>
      </div>



      <% end %>



  <div class="row">
    <table class="table col-md-8 border">
      <thead>
        <tr>
          <th class="">郵便番号</th>
          <th class="">住所</th>
          <th class="">宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @delivery_addresses.each do |address| %>
        <tr>
          <td><%= address.postcode %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_delivery_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", delivery_address_path(address.id), method: :delete, class: "btn btn-danger ml-3" %>
          </td>
        </tr>


        <% end %>
      </tbody>

    </table>
  </div>

</div>
