    <div class="container mt-4">

      <div class="row offset-md-1">
        <h3>配送先編集</h3>
      </div>

  <% if @delivery_address.errors.any? %>

    <div class="row offset-md-1">

      <ul>
      <% @delivery_address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

    </div>

  <% end %>

      <%= form_with model: @delivery_address, local: true do |f| %>

      <div class="row mt-4 form-group">
        <%= f.label :postcode, "郵便番号（ハイフンなし）",class: "col-md-3" %>
        <%= f.text_field :postcode, class: "offset-md-1" %>
      </div>

      <div class="row form-group">
        <%= f.label :address, "住所",class: "col-md-3" %>
        <%= f.text_field :address, class: "offset-md-1 col-4" %>
      </div>

      <div class="row mb-5 form-group">
        <%= f.label :name, "名前",class: "col-md-3" %>
        <%= f.text_field :name, class: "offset-md-1" %>
        <%= f.submit "変更内容を保存",class: "btn btn-success offset-md-2 col-2" %>
      </div>



      <% end %>

      </div>