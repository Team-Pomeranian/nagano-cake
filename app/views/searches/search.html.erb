<h2>検索結果一覧</h2>

<table class="table table-striped bg-light">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>説明</th>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td>¥<%= (item.price_no_tax*1.1).floor %></td>
        <td><%= item.introduction %></td>
        <td><%= item.genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>