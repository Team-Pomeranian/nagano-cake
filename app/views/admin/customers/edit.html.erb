<div class='container p-5'>
  <div class='row'>
    <div class = "mx-auto", style="width: 75%;">
      <h3 class="font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %> 様の会員情報編集</h3>
      <%= form_with model: [:admin, @customer], local: true do |f| %>
        <table class ="table">
          <tr>
            <td class="font-weight-bold">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">郵便番号</td>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">会員ステータス</td>
            <td>
              <%= f.radio_button(:is_deleted, "false") %>
              <%= f.label(:is_deleted, "有効", value: "false")  %>
              <%= f.radio_button(:is_deleted, "true") %>
              <%= f.label(:is_deleted, "退会", value: "true") %>
            </td>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>