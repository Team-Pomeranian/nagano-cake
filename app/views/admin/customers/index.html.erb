<div class='container p-3'>
  <h2>会員一覧</h2>
  <div class='row'>
    <div class = "mx-auto", style="width: 75%;">
      <table class = "table">
        <thead class="thead-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%=customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class="text-secondary" >退会済み</p>
                <% else %>
                  <p class="text-success" >有効会員</p>
                <% end %>
              </td>
            <% end %>
          </tr>
          <td><%= paginate @customers %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>