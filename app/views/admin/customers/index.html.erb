<h2>会員一覧</h2>
<% @customers.each do |customer| %>
<div class='container'>
  <div class='row'>
    <div class = "mx-auto", style="width: 75%;">
      <table class = "table">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.first_name %><%=customer.last_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted %>
              <%= "退会済み" %>
            <% else %>
              <%= "有効会員" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>
