<div class='container p-5'>
  <div class='row'>
    <div class = "mx-auto", style="width: 75%;">
      <div class ="row">
        <h3 class="font-weight-bold">会員一覧</h3>
        <p class="p-2">(全<%= @customers.count %>名）<p>
      </div>
      <table class = "table">
        <thead class="thead-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%=customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class ="font-weight-bold"><%= "退会済み" %></p>
                <% else %>
                  <p class ="font-weight-bold text-success"><%= "有効会員" %></p>
                <% end %>
              </td>
            <% end %>
          </tr>
          <td><%= paginate @customers %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>