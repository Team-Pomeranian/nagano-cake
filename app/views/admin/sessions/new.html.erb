<div class="container">
<div class="row">
  <div class="text-danger mt-5 offset-md-3"><%= flash[:alert] %></div>
</div>

  <div class="row">
<h4 class="mb-4 mt-3">管理者ログイン</h4>
  </div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row form-group offset-md-1">
    <%= f.label :email, "メールアドレス",class: "col-md-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
  </div>

  <div class="row form-group offset-md-1">
    <%= f.label :password, "パスワード" ,class: "col-3"  %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
  </div>

  <div class="mt-4">
    <%= f.submit "ログイン", class: "btn btn-primary col-2 offset-md-4" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>
