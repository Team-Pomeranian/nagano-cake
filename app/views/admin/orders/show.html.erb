<h2>注文履歴詳細</h2>
<div class ="container">
  <div class ="row">
    <div class= "col-md-12">
      <table class ="table">
        <tr>
          <td>購入者</td>
          <td><%= @order.customer_id %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            〒<%= @order.postcode %>  <%= @order.address %></br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
            <td>
              <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"],["制作中", "制作中"],["発送準備中", "発送準備中"],["発送済み", "発送済み"]],{selected: @order.status} %>
              <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class ="row">
    <div class= "col-md-7">
      <table class ="table">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <tr>
          <% @order_items.each do |order_item| %>
            <td><%= order_item.item.name %></td>
            <td><%= ((order_item.item.price_no_tax)*1.1).round.to_s(:delimited) %></td>
            <td><%= order_item.quantity %></td>
            <td><%= (((order_item.item.price_no_tax)*(order_item.quantity))*1.1).round.to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_item, url: admin_order_order_item_path(order_item), method: :patch, local: true do |f| %>
                <%= f.select :production_status, [["着手不可", "着手不可"], ["制作待ち", "制作待ち"],["制作中", "制作中"],["制作完了", "制作完了"]],{selected: order_item.production_status} %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
    <div class ="col-md-4 offset-md-1">
       <h4>商品合計     <%= @order.total_price %>円</h4>
       <h4>送料　　　    <%= @order.postage %>円</h4>
       <h4>請求金額合計　<%= (@order.total_price+@order.postage) %>円</h4>
    </div>
  </div>
</div>
