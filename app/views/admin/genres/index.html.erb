<div class='container'>
  <h2>ジャンル一覧・追加</h2>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
        <tr>
          <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </div>
  </div>
</div>
<div style ="padding: 30px;">
  <table class ="table mx-auto", style= "width: 50%;" >
    <thead class="thead-light">
      <th>ジャンル</th><th></th>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
      <td><%= paginate @genres %></td>
    </tbody>
  </table>
</div>
