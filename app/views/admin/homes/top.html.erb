<div class ="p-5">
  <div class ="row">
    <div class ="col-md-10 mx-auto">
      <div class ="row">
        <h3 class="font-weight-bold">注文履歴一覧</h3>
        <p class="p-2">(全<%= @orders.count %>件）<p>
      </div>
        <table class ="table">
          <thead class="thead-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to admin_order_path(order) do %>
                    <%= l order.created_at %>
                  <% end %>
                </td>
                <td><%= order.name %></td>
                <td><%= order.order_items.sumquantity %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
            <td><%= paginate @orders %></td>
          </tbody>
        </table>
    </div>
  </div>
</div>