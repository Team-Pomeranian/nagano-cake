<h2>注文履歴一覧</h2>
<div class ="container">
  <div class ="row">
    <div class ="col-md-10 mx-auto">
      <table class ="table">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_items.sumquantity %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>