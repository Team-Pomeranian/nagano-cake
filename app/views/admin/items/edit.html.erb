<div class="container">
  <h2>商品編集</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @item, url:admin_item_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :image, "商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :item_image, "画像の説明" %>
          <%= f.text_field :item_image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "商品説明" %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id ]}, { include_blank: true } %>
        </div>
        <div class="form-group">
          <%= f.label :price_no_tax, "税抜価格" %>
          <%= f.text_field :price_no_tax %>円
        </div>
        <div class="form-group">
          <%= f.label :sales_status, "販売ステータス" %>
          <%= f.radio_button :sales_status, true %>
          <%= f.label :sales_status, "販売中", value: true %>
          <%= f.radio_button :sales_status, false %>
          <%= f.label :sales_status, "販売停止中", value: false %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>