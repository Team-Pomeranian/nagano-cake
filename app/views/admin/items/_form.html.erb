<%= form_with model: [:admin, item], local: true do |f| %>
<table class="table table-hover table-borderless text-nowrap">
  <tbody>
    <tr>
      <th>
        <%= f.label :image, "商品画像" %>
      </th>
      <td>
        <%= f.file_field :image, accept: "image/*" %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :item_image, "画像の説明" %>
      </th>
      <td>
        <%= f.text_field :item_image %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :name, "商品名" %>
      </th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :introduction, "商品説明" %>
      </th>
      <td>
        <%= f.text_area :introduction %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :genre_id, "ジャンル" %>
      </th>
      <td>
        <%= f.select :genre_id, genres.map{ |genre| [genre.name, genre.id ]}, { include_blank: true } %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :price_no_tax, "税抜価格" %>
      </th>
      <td>
        <%= f.text_field :price_no_tax %>円
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :sales_status, "販売ステータス" %>
      </th>
      <td>
        <%= f.radio_button :sales_status, true %>
        <%= f.label :sales_status, "販売中", value: true %>
        <%= f.radio_button :sales_status, false %>
        <%= f.label :sales_status, "販売停止中", value: false %>
      </td>
    </tr>
  </tbody>
</table>
<div class="row">
<div class="mx-auto">
  <%= f.submit "保存", class: 'btn btn-success rounded-pill' %>
</div>
</div>
<% end %>