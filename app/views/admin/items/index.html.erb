<h4 class ="shadow p-3 mb-5 bg-light rounded font-weight-bold font-italic bg-dark text-white">商品一覧</h4>
<div class="container">
  <div class="row">
    <table class="table">
    <thead class= "thead-light">
      <tr>
        <th>
          <%= link_to new_admin_item_path do %>
            <%= image_tag "plus-solid.svg", width: '30px', height: '30px' %>
          <% end %>
        </th>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td></td>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
          </td>
        <td><%= item.price_no_tax.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.sales_status %>
            <p class="text-success" >販売中</p>
          <% else %>
            <p class="text-secondary">販売停止中</p>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
  <%= paginate @items %>
</div>